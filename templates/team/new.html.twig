{% extends 'base.html.twig' %}

{% block body %}

    {% include 'layout/navbar.html.twig' %}
    {% include 'layout/sidebar.html.twig' %}


    <div class="myContainer">

        <h1 class="mb-5">Ajouter un nouvel utilisateur</h1>
        {% if erreurs is not empty %}
		    <div class="alert alert-danger">
			    <p>Vous n'avez pas rempli le formulaire correctement : </p>
                <ul>
                    {% for erreur in erreurs %}
                        <li>{{ erreur }}</li>
                    {% endfor %}
                </ul>
		    </div>
        {% endif %}
        <span class="span-utilisateurs">Utilisateurs</span>
        <div class="donnees-utilisateurs">
            <form action="" method="post">
                <div class="row">
                    <div class="col-sm-4"></div>
                    <div class="col">
                        <div class="form-group row">
                            <label class="col-sm-2" for="">Titre</label>
                            <div class="col-sm-3">
                                <select style="width:100%" name="title" class="form-control form-control-sm">
                                    <option value="Madame">Madame</option>
                                    <option value="Mademoiselle">Mademoiselle</option>
                                    <option value="Monsieur">Monsieur</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">	
                            <label class="col-sm-2" for="">Prénom</label>
                            <div class="col-sm-3">
                                <input style="width:100%" type="text" placeholder="Prénom" name="firstname" class="form-control form-control-sm">
                            </div>
                        </div>
                        <div class="form-group row">	
                            <label class="col-sm-2" for="">Nom</label>
                            <div class="col-sm-3">
                                <input style="width:100%" type="text" placeholder="Nom" name="lastname" class="form-control form-control-sm">
                            </div>
                        </div>
                        <div class="form-group row">	
                            <label class="col-sm-2" for="">Adresse email</label>
                            <div class="col-sm-3">
                                <input style="width:100%" type="email" placeholder="Adresse email" name="email" class="form-control form-control-sm">
                            </div>
                        </div>
                        <div class="form-group row">	
                            <label class="col-sm-2" for="">Mot de passe</label>
                            <div class="col-sm-3">
                                <input style="width:100%" type="password" placeholder="Mot de passe" name="password" class="form-control form-control-sm mb-5">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-10"></div>
                </div>
                <div class="row">
                    <div class="col"></div>
                    <label for="">Niveau d'accès</label>
                    <div class="col">
                         <div class="form-check">
                            <input class="form-check-input" type="radio" name="roles" value="admin_gold" required>
                            <label class="form-check-label" for="flexCheckDefault">
                                <strong>AdminGold</strong>
                                <p>Cet utilisateur pourra consulter le profil de tous les modèles et de tous les utilisateurs. Il pourra aussi en ajouter, modifier ou supprimé</p>
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="roles" value="admin_silver" required>
                            <label class="form-check-label" for="flexCheckChecked">
                                <strong>AdminSilver</strong>
                                <p>Cet utilisateur pourra consulter le profil de tous les modèles et ainsi en ajouter, modifier ou supprimé. Il pourra aussi modifier son compte utilisateur</p>
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="roles" value="admin_bronze" required>
                            <label class="form-check-label" for="flexCheckChecked">
                                <strong>AdminBronze</strong>
                                <p>Cet utilisateur pourra consulter le profil de tous les modèles et modifier son compte utilisateur</p>
                            </label>
                        </div>
                    </div>
                    <div class="col"></div>
                </div>    
        </div>


                <div class="col">
                    <div class="form-group">
                        <button class="btn btn-primary button_modele">Enrgistrer</button>
                    </div>
                </div>
                
            </form>

        

        <a href="{{ path('team') }}" role="button" class="btn btn-primary button_modele_delete">Annuler</a>

    </div>
    

{% endblock %}
                <p class="text-center">{{ men.nombre_homme }}</p>
            </div>
            <div class="col col-femme">
                <p class="text-center">Âge moyen des modèles femmes</p>
                <p class="text-center">{{ averageWomen.age | number_format(0) }}</p>
            </div>
            <div class="col col-homme ml-5">
                <p class="text-center">Âge moyen des modèles hommes</p>
                <p class="text-center">{{ averageMen.age | number_format(0) }}</p>
            </div>
        </div>

{% endblock %}
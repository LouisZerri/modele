{% extends 'base.html.twig' %}

{% block body %}

    {% include 'layout/navbar.html.twig' %}
    {% include 'layout/sidebar.html.twig' %}

    <div class="myContainer">
        <h2>Tableau de bord</h2>

        <div class="row dashboard">
            <div class="col col-femme ml-5">
                <p class="text-center">Nombre de modèles femmes</p>
                <p class="text-center">{{ women.nombre_femme }}</p>
            </div>
            <div class="col col-homme ml-5 mr-5">

{% extends 'base.html.twig' %}



{% block body %}

    {% include 'layout/navbar.html.twig' %}
    
    {% if error %}
        <div class="container">
            <div class="alert alert-danger mt-5">
                {{ error.messageKey | trans(error.messagedata, 'security') }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>  
    {% endif %}

    <div class="container login">
        <div class="jumbotron">
            <h1 class="display-5 mb-5">Connexion Ã  votre compte</h1>
            <form action="{{ path('security_login') }}" method="post">
                <div class="form-group">
                    <label for="">Entrer votre adresse email</label>
                    <input style="width: 100%" type="text" name="_username" placeholder="Entrer votre adresse email" class="form-control">
                </div>
                <div class="form-group mt-5 login-input">
                    <label for="">Entrer votre mot de passe</label>
                    <input style="width: 100%" type="password" name="_password" placeholder="Entrer votre mot de passe" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary mt-3">Se connecter</button>
            </form>
        </div>
    </div>
{% endblock %}

